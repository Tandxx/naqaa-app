<!-- views/error.ejs - صفحة الخطأ محدثة بالتصميم الجديد -->
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>خطأ - نقاء</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=Noto+Sans+Arabic:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body { 
      font-family: 'Noto Sans Arabic', 'Space Grotesk', sans-serif; 
    }
  </style>
</head>
<body>
  <div class="page-wrapper" style="display: flex; align-items: center; justify-content: center; min-height: 100vh;">
    <div class="container" style="max-width: 600px;">
      <div class="card scale-in" style="text-align: center; padding: var(--space-2xl);">
<div style="text-align: center; margin-bottom: var(--space-lg);">
  <img src="../image/1.png" alt="نقاء" class="hero-logo" style="filter: grayscale(1); opacity: 0.7;">
  <div style="font-size: 3rem; margin-top: var(--space-md); filter: grayscale(1); opacity: 0.7;">
    😔
  </div>
</div>
        <h1 style="color: var(--danger); margin-bottom: var(--space-md); font-size: 2.5rem;">
          حدث خطأ
        </h1>
        <p style="color: var(--text-tertiary); margin-bottom: var(--space-xl); font-size: 1.1rem; line-height: 1.6;">
          <%= message || 'عذراً، حدث خطأ غير متوقع. يرجى المحاولة مرة أخرى.' %>
        </p>
        
        <div style="background: var(--bg-glass); border: 1px solid var(--border-primary); border-radius: var(--radius-md); padding: var(--space-lg); margin-bottom: var(--space-xl);">
          <h3 style="margin-bottom: var(--space-md); color: var(--text-secondary);">
            <span style="margin-left: var(--space-sm);">💡</span>
            ماذا يمكنك فعله؟
          </h3>
          <ul style="list-style: none; display: flex; flex-direction: column; gap: var(--space-sm); text-align: right;">
            <li style="display: flex; align-items: center; gap: var(--space-sm);">
              <span>🔄</span>
              <span>جرب تحديث الصفحة</span>
            </li>
            <li style="display: flex; align-items: center; gap: var(--space-sm);">
              <span>🏠</span>
              <span>ارجع للصفحة الرئيسية</span>
            </li>
            <li style="display: flex; align-items: center; gap: var(--space-sm);">
              <span>⏰</span>
              <span>حاول مرة أخرى بعد قليل</span>
            </li>
          </ul>
        </div>
        
        <div style="display: flex; gap: var(--space-md); justify-content: center; flex-wrap: wrap;">
          <a href="/dashboard" class="btn btn-primary">
            <span>🏠</span>
            <span>العودة للرئيسية</span>
          </a>
          <button onclick="history.back()" class="btn btn-secondary">
            <span>↩️</span>
            <span>العودة للخلف</span>
          </button>
          <button onclick="location.reload()" class="btn btn-secondary">
            <span>🔄</span>
            <span>تحديث الصفحة</span>
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const card = document.querySelector('.card');
      setTimeout(() => {
        card.classList.add('visible');
      }, 100);
    });
  </script>
</body>
</html>