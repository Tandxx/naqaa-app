<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>إنشاء حساب - نقاء</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=Noto+Sans+Arabic:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body { 
      font-family: 'Noto Sans Arabic', 'Space Grotesk', sans-serif; 
    }
    
    .auth-container {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: var(--space-lg);
      pointer-events: auto !important;
    }
    
    .auth-card {
      width: 100%;
      max-width: 500px;
      background: var(--gradient-card);
      border: 1px solid var(--border-primary);
      border-radius: var(--radius-xl);
      padding: var(--space-xl);
      backdrop-filter: blur(20px);
      box-shadow: var(--shadow-xl);
      pointer-events: auto !important;
      position: relative;
      z-index: 10;
    }
    
    /* تحسين العناصر التفاعلية */
    .form-control, .btn, button, input, select, a {
      pointer-events: auto !important;
      z-index: 100 !important;
      position: relative !important;
      cursor: pointer !important;
    }
    
    .form-control {
      background: var(--bg-input) !important;
      border: 1px solid var(--border-primary) !important;
      color: var(--text-primary) !important;
      transition: all 0.3s ease;
      min-height: 45px !important;
    }
    
    .form-control:focus {
      border-color: var(--primary) !important;
      box-shadow: 0 0 0 3px var(--primary-subtle) !important;
      outline: none !important;
    }
    
    .btn {
      display: inline-flex !important;
      align-items: center !important;
      justify-content: center !important;
      gap: var(--space-sm) !important;
      min-height: 48px !important;
      font-weight: 600 !important;
      border-radius: var(--radius-md) !important;
      transition: all 0.3s ease !important;
      text-decoration: none !important;
      border: none !important;
    }
    
    .btn:hover {
      transform: translateY(-2px) !important;
      text-decoration: none !important;
    }
    
    .btn-primary {
      background: var(--gradient-primary) !important;
      color: white !important;
      box-shadow: var(--shadow-glow) !important;
    }
    
    .btn-primary:hover {
      box-shadow: var(--shadow-glow-strong) !important;
      color: white !important;
    }
    
    .btn-secondary {
      background: var(--bg-card) !important;
      color: var(--text-secondary) !important;
      border: 1px solid var(--border-primary) !important;
    }
    
    .btn-secondary:hover {
      background: var(--bg-card-hover) !important;
      color: var(--text-primary) !important;
      border-color: var(--border-accent) !important;
    }
    
    /* تحسين الأنيميشن */
    .auth-card.visible {
      animation: slideInUp 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    
    @keyframes slideInUp {
      from {
        opacity: 0;
        transform: translateY(30px) scale(0.95);
      }
      to {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }
    
    /* تحسين الهيدر */
    .auth-header {
      text-align: center;
      margin-bottom: var(--space-lg);
    }
    
    .auth-title {
      background: var(--gradient-primary);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      font-size: 2.2rem;
      font-weight: 700;
      margin-bottom: var(--space-xs);
      font-family: 'Space Grotesk', sans-serif;
    }
    
    .auth-subtitle {
      color: var(--text-tertiary);
      font-size: 1rem;
      margin: 0;
    }
    
    /* تحسين النموذج */
    .auth-form {
      display: flex;
      flex-direction: column;
      gap: var(--space-md);
      pointer-events: auto !important;
    }
    
    .form-group {
      pointer-events: auto !important;
    }
    
    .form-label {
      display: flex;
      align-items: center;
      gap: var(--space-sm);
      margin-bottom: var(--space-xs);
      font-weight: 600;
      color: var(--text-secondary);
      font-size: 0.95rem;
    }
    
    .form-hint {
      color: var(--text-muted);
      font-size: 0.8rem;
      margin-top: var(--space-xs);
      display: block;
    }
    
    /* تحسين اختيار الجنس */
    .gender-options {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--space-sm);
      margin-top: var(--space-xs);
    }
    
    .gender-option {
      position: relative;
    }
    
    .gender-option input[type="radio"] {
      position: absolute;
      opacity: 0;
      pointer-events: none;
    }
    
    .gender-label {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--space-sm);
      padding: var(--space-sm) var(--space-md);
      background: var(--bg-glass);
      border: 1px solid var(--border-primary);
      border-radius: var(--radius-md);
      cursor: pointer;
      transition: all 0.3s ease;
      font-weight: 500;
      text-align: center;
    }
    
    .gender-label:hover {
      background: var(--bg-glass-strong);
      border-color: var(--border-accent);
    }
    
    .gender-option input[type="radio"]:checked + .gender-label {
      background: var(--primary-subtle);
      border-color: var(--primary);
      color: var(--primary-light);
    }
    
    /* بطاقة الخصوصية المدمجة */
    .privacy-info {
      background: var(--bg-glass);
      border: 1px solid var(--border-primary);
      border-radius: var(--radius-md);
      padding: var(--space-md);
      margin: var(--space-md) 0;
    }
    
    .privacy-header {
      display: flex;
      align-items: center;
      gap: var(--space-sm);
      margin-bottom: var(--space-sm);
    }
    
    .privacy-list {
      list-style: none;
      color: var(--text-tertiary);
      font-size: 0.85rem;
      line-height: 1.5;
    }
    
    .privacy-list li {
      margin-bottom: var(--space-xs);
    }
    
    /* تحسين التذييل */
    .auth-footer {
      text-align: center;
      margin-top: var(--space-lg);
      padding-top: var(--space-lg);
      border-top: 1px solid var(--border-primary);
    }
    
    .auth-footer p {
      color: var(--text-tertiary);
      margin-bottom: var(--space-sm);
      font-size: 0.9rem;
    }
    
    .auth-footer a {
      color: var(--primary-light);
      text-decoration: none;
      font-weight: 500;
    }
    
    .auth-footer a:hover {
      color: var(--primary);
      text-decoration: underline;
    }
    
    /* تحسين alerts */
    .alert {
      padding: var(--space-sm);
      border-radius: var(--radius-md);
      margin-bottom: var(--space-md);
      border: 1px solid;
      display: flex;
      align-items: center;
      gap: var(--space-sm);
      font-size: 0.9rem;
    }
    
    .alert-danger {
      background: rgba(255, 71, 87, 0.1);
      border-color: var(--border-danger);
      color: var(--danger);
    }
    
    /* تحسين validation */
    .form-control.invalid {
      border-color: var(--danger) !important;
      box-shadow: 0 0 0 3px rgba(255, 71, 87, 0.1) !important;
    }
    
    .form-control.valid {
      border-color: var(--success) !important;
      box-shadow: 0 0 0 3px rgba(0, 255, 136, 0.1) !important;
    }
    
    /* Responsive */
    @media (max-width: 768px) {
      .auth-container {
        padding: var(--space-md);
      }
      
      .auth-card {
        max-width: 100%;
        padding: var(--space-lg);
      }
      
      .auth-title {
        font-size: 2rem;
      }
      
      .gender-options {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="page-wrapper auth-container">
    <div class="auth-card" id="authCard">
      <div class="auth-header">
        <img src="../image/1.png" alt="نقاء" class="auth-logo-img">
        <h1 class="auth-title">نقاء</h1>
        <p class="auth-subtitle">ابدأ رحلتك نحو حياة أفضل</p>
      </div>

      <% if (errors && errors.length > 0) { %>
        <div class="alert alert-danger">
          <span>⚠️</span>
          <div>
            <% errors.forEach(error => { %>
              <p style="margin: 0;"><%= error.msg %></p>
            <% }) %>
          </div>
        </div>
      <% } %>

      <form action="/register" method="POST" class="auth-form" id="registerForm">
        <!-- اسم المستخدم -->
        <div class="form-group">
          <label for="username" class="form-label">
            <span>👤</span>
            <span>اسم المستخدم</span>
          </label>
          <input 
            type="text" 
            id="username" 
            name="username" 
            class="form-control" 
            value="<%= formData.username || '' %>"
            placeholder="اختر اسم مستخدم فريد"
            required
            minlength="3"
            maxlength="20"
            autocomplete="username"
            pattern="[a-zA-Z0-9_]+"
          >
          <small class="form-hint">3-20 حرف، أحرف وأرقام فقط</small>
        </div>

        <!-- البريد الإلكتروني -->
        <div class="form-group">
          <label for="email" class="form-label">
            <span>📧</span>
            <span>البريد الإلكتروني</span>
          </label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            class="form-control" 
            value="<%= formData.email || '' %>"
            placeholder="example@domain.com"
            required
            autocomplete="email"
          >
          <small class="form-hint">لاستعادة كلمة المرور والتحقق</small>
        </div>

        <!-- الجنس -->
        <div class="form-group">
          <label class="form-label">
            <span>⚧</span>
            <span>الجنس</span>
          </label>
          <div class="gender-options">
            <div class="gender-option">
              <input 
                type="radio" 
                id="male" 
                name="gender" 
                value="male"
                <%= (formData.gender === 'male') ? 'checked' : '' %>
                required
              >
              <label for="male" class="gender-label">
                <span>👨</span>
                <span>ذكر</span>
              </label>
            </div>
            <div class="gender-option">
              <input 
                type="radio" 
                id="female" 
                name="gender" 
                value="female"
                <%= (formData.gender === 'female') ? 'checked' : '' %>
                required
              >
              <label for="female" class="gender-label">
                <span>👩</span>
                <span>أنثى</span>
              </label>
            </div>
          </div>
        </div>

        <!-- كلمة المرور -->
        <div class="form-group">
          <label for="password" class="form-label">
            <span>🔒</span>
            <span>كلمة المرور</span>
          </label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            class="form-control" 
            placeholder="كلمة مرور قوية"
            required
            minlength="6"
            autocomplete="new-password"
          >
          <small class="form-hint">6 أحرف على الأقل</small>
        </div>

        <!-- تأكيد كلمة المرور -->
        <div class="form-group">
          <label for="confirmPassword" class="form-label">
            <span>🔐</span>
            <span>تأكيد كلمة المرور</span>
          </label>
          <input 
            type="password" 
            id="confirmPassword" 
            name="confirmPassword" 
            class="form-control" 
            placeholder="أعد كتابة كلمة المرور"
            required
            autocomplete="new-password"
          >
        </div>

        <!-- معلومات الخصوصية المدمجة -->
        <div class="privacy-info">
          <div class="privacy-header">
            <span style="font-size: 1.2rem;">🛡️</span>
            <strong style="color: var(--text-secondary); font-size: 0.9rem;">التزامنا بخصوصيتك</strong>
          </div>
          <ul class="privacy-list">
            <li>✅ جميع البيانات محلية ومشفرة</li>
            <li>✅ البريد للتحقق واستعادة كلمة المرور فقط</li>
            <li>✅ يمكنك حذف حسابك في أي وقت</li>
          </ul>
        </div>

        <button type="submit" class="btn btn-primary" style="width: 100%; padding: var(--space-md); font-size: 1.1rem;">
          <span>🚀</span>
          <span>إنشاء حساب والبدء</span>
        </button>
      </form>

      <div class="auth-footer">
        <p>لديك حساب بالفعل؟</p>
        <a href="/login" class="btn btn-secondary">
          <span>🔑</span>
          <span>تسجيل دخول</span>
        </a>
      </div>
    </div>
  </div>

  <script>
    let hasUnsavedChanges = false;
    const originalValues = {};

    function markAsChanged() {
      const form = document.getElementById('registerForm');
      const formData = new FormData(form);
      
      hasUnsavedChanges = Object.keys(originalValues).some(key => {
        return formData.get(key) !== originalValues[key];
      });
    }

    function validateField(field) {
      const isValid = field.checkValidity();
      
      if (isValid) {
        field.classList.remove('invalid');
        field.classList.add('valid');
      } else {
        field.classList.remove('valid');
        field.classList.add('invalid');
      }
      
      return isValid;
    }

    function validatePasswords() {
      const password = document.getElementById('password');
      const confirmPassword = document.getElementById('confirmPassword');
      
      if (confirmPassword.value && password.value !== confirmPassword.value) {
        confirmPassword.setCustomValidity('كلمات المرور غير متطابقة');
        confirmPassword.classList.add('invalid');
        confirmPassword.classList.remove('valid');
        return false;
      } else {
        confirmPassword.setCustomValidity('');
        if (confirmPassword.value) {
          confirmPassword.classList.remove('invalid');
          confirmPassword.classList.add('valid');
        }
        return true;
      }
    }

    function validateEmail() {
      const email = document.getElementById('email');
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      
      if (email.value && !emailRegex.test(email.value)) {
        email.setCustomValidity('يرجى إدخال بريد إلكتروني صحيح');
        email.classList.add('invalid');
        email.classList.remove('valid');
        return false;
      } else {
        email.setCustomValidity('');
        if (email.value) {
          email.classList.remove('invalid');
          email.classList.add('valid');
        }
        return true;
      }
    }

    function validateUsername() {
      const username = document.getElementById('username');
      const usernameRegex = /^[a-zA-Z0-9_]+$/;
      
      if (username.value && !usernameRegex.test(username.value)) {
        username.setCustomValidity('اسم المستخدم يجب أن يحتوي على أحرف وأرقام فقط');
        username.classList.add('invalid');
        username.classList.remove('valid');
        return false;
      } else {
        username.setCustomValidity('');
        if (username.value && username.value.length >= 3) {
          username.classList.remove('invalid');
          username.classList.add('valid');
        }
        return true;
      }
    }

    function showError(message) {
      // إزالة أي رسالة خطأ موجودة
      const existingAlert = document.querySelector('.alert-danger');
      if (existingAlert) {
        existingAlert.remove();
      }
      
      // إنشاء رسالة خطأ جديدة
      const errorDiv = document.createElement('div');
      errorDiv.className = 'alert alert-danger';
      errorDiv.innerHTML = `<span>⚠️</span><span>${message}</span>`;
      
      const form = document.getElementById('registerForm');
      form.insertBefore(errorDiv, form.firstChild);
      
      // إزالة الرسالة بعد 5 ثوان
      setTimeout(() => {
        if (errorDiv.parentNode) {
          errorDiv.remove();
        }
      }, 5000);
    }

    function enhanceInteractivity() {
      // التأكد من عمل جميع العناصر
      const allInteractive = document.querySelectorAll('button, input, a, select, textarea');
      allInteractive.forEach(element => {
        element.style.pointerEvents = 'auto';
        element.style.zIndex = '100';
        element.style.position = 'relative';
      });
      
      // التأكد من عمل الـ form
      const authForm = document.querySelector('.auth-form');
      if (authForm) {
        authForm.style.pointerEvents = 'auto';
        authForm.style.zIndex = '10';
      }
      
      // التأكد من عمل الـ card
      const card = document.querySelector('.auth-card');
      if (card) {
        card.style.pointerEvents = 'auto';
        card.style.zIndex = '10';
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      console.log('✨ تحميل صفحة إنشاء الحساب...');
      
      const authCard = document.getElementById('authCard');
      const form = document.getElementById('registerForm');
      const passwordInput = document.getElementById('password');
      const confirmPasswordInput = document.getElementById('confirmPassword');
      const emailInput = document.getElementById('email');
      const usernameInput = document.getElementById('username');
      
      // إضافة الأنيميشن
      setTimeout(() => {
        authCard.classList.add('visible');
      }, 100);

      // تحسين التفاعل مع النموذج
      const inputs = form.querySelectorAll('.form-control');
      inputs.forEach(input => {
        input.style.pointerEvents = 'auto';
        input.style.zIndex = '100';
        input.style.position = 'relative';
        
        input.addEventListener('focus', function() {
          this.parentElement.style.transform = 'translateY(-2px)';
        });
        
        input.addEventListener('blur', function() {
          this.parentElement.style.transform = 'translateY(0)';
          validateField(this);
        });
        
        input.addEventListener('input', function() {
          markAsChanged();
          
          if (this.id === 'password' || this.id === 'confirmPassword') {
            validatePasswords();
          }
          if (this.id === 'email') {
            validateEmail();
          }
          if (this.id === 'username') {
            validateUsername();
          }
        });
      });

      // تحسين الأزرار
      const buttons = document.querySelectorAll('.btn, button');
      buttons.forEach(btn => {
        btn.style.pointerEvents = 'auto';
        btn.style.zIndex = '100';
        btn.style.position = 'relative';
        btn.style.cursor = 'pointer';
        
        btn.addEventListener('mouseenter', function() {
          if (!this.disabled) {
            this.style.transform = 'translateY(-2px)';
          }
        });
        
        btn.addEventListener('mouseleave', function() {
          this.style.transform = 'translateY(0)';
        });
      });

      // تحسين radio buttons للجنس
      const genderLabels = document.querySelectorAll('.gender-label');
      genderLabels.forEach(label => {
        label.addEventListener('click', function() {
          markAsChanged();
        });
      });

      // معالجة إرسال النموذج
      form.addEventListener('submit', (e) => {
        // التحقق النهائي
        const isValidUsername = validateUsername();
        const isValidEmail = validateEmail();
        const isValidPasswords = validatePasswords();
        
        if (!isValidUsername || !isValidEmail || !isValidPasswords) {
          e.preventDefault();
          showError('يرجى تصحيح الأخطاء في النموذج');
          return;
        }

        // التحقق من اختيار الجنس
        const genderSelected = form.querySelector('input[name="gender"]:checked');
        if (!genderSelected) {
          e.preventDefault();
          showError('يرجى اختيار الجنس');
          return;
        }

        const submitBtn = form.querySelector('button[type="submit"]');
        submitBtn.innerHTML = '<span class="loading"></span><span>جاري إنشاء الحساب...</span>';
        submitBtn.disabled = true;
        submitBtn.style.cursor = 'not-allowed';
        submitBtn.style.opacity = '0.7';
      });
      
      // تطبيق التحسينات
      enhanceInteractivity();
      
      console.log('✅ صفحة إنشاء الحساب جاهزة وجميع العناصر تعمل');
    });

    // تحذير عند المغادرة بدون حفظ
    window.addEventListener('beforeunload', function(e) {
      if (hasUnsavedChanges) {
        e.preventDefault();
        e.returnValue = 'لديك تغييرات غير محفوظة. هل تريد المغادرة؟';
        return e.returnValue;
      }
    });
  </script>
</body>
</html>